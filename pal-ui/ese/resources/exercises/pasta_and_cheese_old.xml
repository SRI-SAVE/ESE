                        <parameter accessor="thingPutOn" id="thingOn-3"/>
                    </atom>
                </step>
                
                <ordering_constraint successor="step-2" predecessor="step-1"/>
                <ordering_constraint successor="step-3" predecessor="step-2"/>

                <value_constraint>
                    <parameter>qty-1</parameter>
                    <value>
                        <ctrs>"2"</ctrs>
