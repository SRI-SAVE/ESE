<exercise id="ex-1">
    <name>Load test</name>
    <description>Load test</description>
    <problem>
        <task id="task-2">
        </task>
    </problem>
    <solution>
        <task_solution>
            <option>
                <step id="step-0">
                    <atom functor="LoadTest^1.0^addToContainer"/>
                </step>             
                <step id="step-1">
                    <atom functor="LoadTest^1.0^move">
                        <parameter id="param-1.1" accessor="source"/>
                        <parameter id="param-1.2" accessor="dest"/>
                        <parameter id="param-1.3" accessor="object"/>                        
                    </atom>
                </step>       
                <step id="step-2">
                    <atom functor="LoadTest^1.0^removeFromContainer"/>
                </step>                         
                <equality_constraint negated="true">
                    <parameter>param-1.1</parameter>
                    <parameter>param-1.2</parameter>                
                </equality_constraint>
                <ordering_constraint predecessor="step-0" successor="step-1" />                
                <ordering_constraint predecessor="step-1" successor="step-2" />                    
                <query_constraint functor="LoadTest^1.0^div2">
                    <arg><ref>param-1.1</ref></arg>
                </query_constraint>
                <value_constraint>
                  <parameter>param-1.3</parameter>
                  <value>
                    <ctrs>"2"</ctrs>
                    <type>LoadTest^1.0^oid</type>
                  </value>
                </value_constraint>
            </option>
        </task_solution>
    </solution>
</exercise>
