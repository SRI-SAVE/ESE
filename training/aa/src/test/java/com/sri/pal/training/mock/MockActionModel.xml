<!-- $Id: MockActionModel.xml 7401 2016-03-25 20:18:20Z Chris Jones (E24486) $ -->
<actionModel version="1.0">
    <type id="latlon">
        <description>Lat/Lon coords, converted to floats</description>
        <struct>
            <ref typeRef="real" name="latitude"/>
            <ref typeRef="real" name="longitude"/>
        </struct>
    </type>

    <action id="isInGeoBox" category="query">
        <description>Indicates if coordinates are within a given geographic area.</description>
        <inputParam id="coords">
            <description>The coordinates to check.</description>
            <typeRef typeId="latlon"/>
        </inputParam>
        <inputParam id="areaName">
            <description>The name of the area whose boundaries to use.</description>
            <typeRef typeId="string"/>
        </inputParam>
        <outputParam id="contained">
            <description>Whether the coordinates are contained in the area.</description>
            <typeRef typeId="boolean"/>
        </outputParam>
    </action>
</actionModel>
