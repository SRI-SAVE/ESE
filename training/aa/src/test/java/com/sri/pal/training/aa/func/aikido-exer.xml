<exercise id="aikido-exercise">
    <name>Aikido</name>
    <description>Exercise to build a square-triangle-circle diagram.</description>
    <problem>
        <task id="task-1">        
            <sub_task><prompt>Do the thing.</prompt></sub_task>
        </task>
    </problem>
    <solution>
        <task_solution task="task-1">
            <option>
                <step id="step-1.1">
                    <atom functor="novo^1.0^dispenseShape">
                        <parameter id="param-1.1.1" accessor="shape"/>
                        <parameter id="param-1.1.2" accessor="piece"/>
                    </atom>
                </step>
                <step id="step-1.2">
                    <atom functor="novo^1.0^dispenseShape">
                        <parameter id="param-1.2.1" accessor="shape"/>
                        <parameter id="param-1.2.2" accessor="piece"/>
                    </atom>
                </step>
                <step id="step-1.3">
                    <atom functor="novo^1.0^dispenseShape">
                        <parameter id="param-1.3.1" accessor="shape"/>
                        <parameter id="param-1.3.2" accessor="piece"/>
                    </atom>
                </step>
                <step id="step-1.4">
                    <atom functor="novo^1.0^assembleThree">
                        <parameter id="param-1.4.1" accessor="piece1"/>
                        <parameter id="param-1.4.2" accessor="piece2"/>
                        <parameter id="param-1.4.3" accessor="piece3"/>
                        <parameter id="param-1.4.4" accessor="configuration"/>
                    </atom>
                </step>
                <equality_constraint>
                     <parameter>param-1.1.2</parameter>                            
                     <parameter>param-1.4.1</parameter>
                </equality_constraint>
                <equality_constraint>
                    <parameter>param-1.2.2</parameter>                            
                    <parameter>param-1.4.2</parameter>
                </equality_constraint>
                <equality_constraint>
                    <parameter>param-1.3.2</parameter>                            
                    <parameter>param-1.4.3</parameter>
                </equality_constraint>                                                        
                <value_constraint>
                    <parameter>param-1.1.1</parameter>
                    <value>
                      <ctrs>"Square"</ctrs>
                      <type>novo^1.0^ShapeEnum</type>
                    </value>
                </value_constraint>                                
                <value_constraint>
                    <parameter>param-1.2.1</parameter>
                    <value>
                      <ctrs>"Triangle"</ctrs>
                      <type>novo^1.0^ShapeEnum</type>
                    </value>
                </value_constraint>                                
                <value_constraint>
                    <parameter>param-1.3.1</parameter>
                    <value>
                      <ctrs>"Circle"</ctrs>
                      <type>novo^1.0^ShapeEnum</type>
                    </value>
                </value_constraint>                                
                <value_constraint>
                    <parameter>param-1.4.4</parameter>
                    <value>
                      <ctrs>"Horizontal"</ctrs>
                      <type>novo^1.0^ConfigEnum</type>
                    </value>
                </value_constraint>                                
            </option>
        </task_solution>
   </solution>
</exercise>
