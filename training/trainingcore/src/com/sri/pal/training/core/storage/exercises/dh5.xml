<exercise>
  <name>PE TMB6F06PE</name>
  <description>Conduct a Collaborative Brief Using CPOF</description>
  <problem>
      <task id="task-1">
        <name>Task 1</name>
        <description>Prepare a Collaborative Brief</description>
        <sub_task id="sub1">
          <prompt>From the Item Palette, drag and name a Pasteboard.</prompt>
        </sub_task>
        <sub_task id="sub2">
          <prompt>Assign Privileges to other members of your group who will need access to your Pasteboard and/or Map.</prompt>
        </sub_task>
        <sub_task id="sub3">
          <prompt>As appropriate, use Marking to color-code elements on the Map.</prompt>
        </sub_task>
        <sub_task id="sub4">
          <prompt>Capture an image using Snagit and include it on the briefing Pasteboard.</prompt>
        </sub_task>
        <sub_task id="sub5">
          <prompt>Place your Briefing Pasteboard in Delay Sleep.</prompt>
        </sub_task>                      
      </task>
  </problem>
</exercise>
